<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TwoActivity">

    <ImageView
        android:id="@+id/selectimage"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"></ImageView>


    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:text="title"
        android:textColor="#000"
        android:textSize="18dp"></TextView>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:textColor="#000"></TextView>

            <TextView
                android:id="@+id/author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="By"></TextView>

            <TextView
                android:id="@+id/publishedat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="publishedat"
                android:textColor="#B3AFAF"></TextView>

        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/share"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_baseline_share_24"
            android:tint="#FFFFFF"
            android:layout_gravity="end|bottom"
            android:elevation="25dp"
            android:layout_marginBottom="80dp"
            android:layout_marginRight="30dp"></com.google.android.material.floatingactionbutton.FloatingActionButton>

        <Button
            android:id="@+id/url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="more detail.."
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/a"
            android:padding="10dp"
            android:elevation="25dp"
            android:layout_marginBottom="30dp"
            android:textColor="#FFFFFF"
            android:foreground="?android:attr/selectableItemBackground"></Button>

    </FrameLayout>

</LinearLayout>